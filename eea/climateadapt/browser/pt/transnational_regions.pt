			var thematicId = ["NATIONAL1|NATIONAL2","PLANS1|PLANS2","IMPACTS1|IMPACTS2","CLIMATE1|CLIMATE2","MINISTRIES|MINISTRI_1","PLATFORM1|PLATFORM2","UNFCCC1|UNFCCC2"]

