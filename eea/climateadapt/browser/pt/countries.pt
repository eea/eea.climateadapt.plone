    <script>
    Array.prototype.unique2 = function ()
    {
    	var n = {}, r = [];
    	for (var i = 0; i < this.length; i++)
    	{
    		if (!n[this[i]])
    		{
    			n[this[i]] = true;
    			r.push(this[i]);
    		}
    	}
    	return r;
    }
    var dojoConfig = {parseOnLoad: true};

    </script>

