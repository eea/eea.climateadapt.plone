<div class="main-area"
  xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  i18n:domain="eea.climateadapt.observatory.frontpage">
  <div class="row">
    <div class="main-health-box col-lg-6 col-sm-6 col-xs-12">
      <div class="list_news_events">
        <h4 i18n:translate="">News/Events</h4>
        <ul class="nav nav-tabs">
          <li class="active">
            <a href="#news-tab" i18n:translate="">News</a>
          </li>
          <li>
            <a href="#events-tab" i18n:translate="">Events</a>
          </li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane active fade in" id="news-tab">
            <div class="fp-news-tile">
              <ul>
                <li>
                  <a href="#">
                    Hiding from a warmer climate in the forest
                  </a>
                  <p class="news-time">11 Jan 2018</p>
                </li>
              </ul>
              <div class="read-more-wrapper">
                <a href="" class="read-more">
                  <i class="fa fa-angle-double-right"></i>
                  <span i18n:translate="">More news</span>
                </a>
              </div>
            </div>
          </div>

          <div class="tab-pane fade" id="events-tab">
            <div class="fp-events-tile">
              <div>
                <a href="#">
                  EU Adaptation Strategy evaluation: public consultation meeting
                </a>
                <p class="news-time">23 Jan 2018</p>
              </div>
              <div class="read-more-wrapper">
                <a href="" class="read-more">
                  <i class="fa fa-angle-double-right"></i>
                  <span i18n:translate="">More events</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="main-health-box col-lg-6 col-sm-6 col-xs-12">
      <div class="box-container zone-share">
        <ul class="nav nav-tabs">
          <li class="active">
            <a href="#newsletter-tab" i18n:translate="">Newsletter</a>
          </li>
          <li>
            <a href="#share-info-tab" i18n:translate="">Share</a>
          </li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane active fade in" id="newsletter-tab">
            <div class="fp-newsletter-tile">
              <div class="feed-wrapper content-body">
                <!-- <a href="/en/observatory/newsletter" title="Check the European Climate Adaptation Newsletters">
                  <i class="fa fa-envelope"></i>
                </a> -->
                <p i18n:translate="">Register to receive news from the European Climate and Health Observatory</p>
                <div class="main-link-wrapper">
                  <a href="https://subscriptions.eea.europa.eu/newsletter-subscription-european-climate-and-health-observatory" class="standard-button primary-button" title="Sign up for our Newsletters" target="_blank" i18n:translate="">
                      Sign me up
                  </a>
                </div>
              </div>
            </div>
          </div>

          <div class="tab-pane fade" id="share-info-tab">
            <div class="fp-share-info-tile box-container info-section">
              <div class="box-container info-section">
                <a tal:attributes="href python:view.translate_url('/en/help/share-your-info')"
                    href="../help/share-your-info">
                  <div class="content-body">
                    <img src="/cca/++theme++climateadaptv2//static/images/health_share.svg"
                         title="Information icon"
                         width="95"
                         height="110"
                         />
                    <h5 class="info-title" i18n:translate="">Share your<br /> information</h5>
                    <p i18n:translate="">Contribute to the Observatory via Climate-ADAPT</p>
                  </div>
                </a>
              </div>
                    </div>
          </div>
        </div>
      </div>
    </div>

    <!-- <div class="health_contribute">
      <h4>Contribute to the Observatory</h4>
      <a href="mailto:climate.adapt@eea.europa.eu"
        class="submit-widget button-field standard-button primary-button">
        Send us an email <i class="pull-right fa fa-envelope"></i>
      </a>
    </div> -->

    <div id="portlet-manager"></div>
  </div>
</div>
